{% extends 'base.html.twig' %}

{% block body %}

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">bluetorio.tk</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#" id="show-blueprint-string-button">
                            <i class="glyphicon glyphicon-copy"></i>
                            Show blueprint string
                        </a>
                    </li>
                    <li>
                        <a href="#" id="load-blueprint-button">
                            <i class="glyphicon glyphicon-paste"></i>
                            Load new blueprint...
                        </a>
                    </li>
                    <li>
                        <a href="#" id="share-blueprint-button">
                            <i class="glyphicon glyphicon-send"></i>
                            Share
                        </a>
                    </li>
                    <li class="dropdown" id="blueprint-recipe-selector">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">
                            <i class="glyphicon glyphicon-book"></i>
                            Select blueprint from a book
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" style="overflow-y: auto; max-height: 400px;">
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="https://github.com/trakos/fbpviewer" target="_blank">
                            <i class="glyphicon glyphicon-info-sign"></i> Contribute on GitHub
                        </a>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container-fluid" id="main-site-container" style="padding:0;margin:0;">
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            padding-top: 50px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('fbpviewer') }}
    <script type="text/javascript">
        const FBR_INITIAL_BLUEPRINT = {{ blueprint_string|json_encode|raw }};
    </script>
{% endblock %}
