{% extends 'base.html.twig' %}

{% block body %}

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">FBPViewer</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#" id="show-blueprint-string-button">Show blueprint string</a></li>
                    <li><a href="#" id="load-blueprint-button">Load new blueprint...</a></li>
                    <li><a href="#" id="share-blueprint-button">Share</a></li>
                    <li class="dropdown" id="blueprint-recipe-selector">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">Select blueprint from a book <span class="caret"></span></a>
                        <ul class="dropdown-menu" style="overflow-y: auto; max-height: 400px;">
                        </ul>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container-fluid" id="main-site-container" style="padding:0;margin:0;">
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            padding-top: 50px;
        }

        .starter-template {
            padding: 40px 15px;
            text-align: center;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {% javascripts
        '@AppBundle/Resources/public/js/*.js'
        '@AppBundle/Resources/public/js/*/*.js'
        '@AppBundle/Resources/public/js/*/*.js'
        '@AppBundle/Resources/public/js/*/*/*.js'
        '@AppBundle/Resources/public/js/*/*/*/*.js'
        filter='uglifyjs'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
        const FBR_INITIAL_BLUEPRINT = {{ blueprint_string|json_encode|raw }};
    </script>
{% endblock %}
